{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "width": 700,
  "height": 500,
  "padding": 5,
  "data": [
    {
      "name": "rice_source",
      "url": "https://raw.githubusercontent.com/amadeatheola/FIT3179/main/week10_homework/data/best_rice_world_ranking.csv",
      "format": { "type": "csv" }
    },
    {
      "name": "rice_cloud",
      "source": "rice_source",
      "transform": [
        {
          "type": "formula",
          "as": "fontSize",
          "expr": "50 - datum.Rank"
        },
        {
          "type": "formula",
          "as": "rotation",
          "expr": "[-45, 0, 45][floor(random() * 3)]"
        },
        {
          "type": "wordcloud",
          "size": [700, 500],
          "text": { "field": "Name" },
          "rotate": { "field": "rotation" },
          "font": "Helvetica Neue, Arial",
          "fontSize": { "field": "fontSize" },
          "fontSizeRange": [10, 60],
          "padding": 2,
          "spiral": "archimedean"
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": { "data": "rice_source", "field": "Name" },
      "range": ["#5B8FF9", "#5AD8A6", "#F6BD16", "#E8684A", "#6DC8EC", "#9270CA", "#FF9D4D"]
    }
  ],
  "marks": [
    {
      "type": "text",
      "from": { "data": "rice_cloud" },
      "encode": {
        "enter": {
          "text": { "field": "text" },
          "align": { "value": "center" },
          "baseline": { "value": "alphabetic" },
          "fill": { "scale": "color", "field": "text" },
          "tooltip": { "signal": "datum.Name + ' (Rank: ' + datum.Rank + ')'" }
        },
        "update": {
          "x": { "field": "x" },
          "y": { "field": "y" },
          "angle": { "field": "angle" },
          "fontSize": { "field": "fontSize" },
          "fillOpacity": { "value": 0.9 }
        },
        "hover": {
          "fillOpacity": { "value": 0.6 }
        }
      }
    }
  ]
}