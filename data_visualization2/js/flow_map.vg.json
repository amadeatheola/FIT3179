{
  "$schema": "https://vega.github.io/schema/vega/v6.json",
  "description": "Hoverable rice export flow map by year",
  "width": 1,
  "signals": [
    {
      "name": "Year",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 2015,
        "max": 2024,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "hoverCountry",
      "value": null,
      "on": [
        {
          "events": "symbol:mouseover",
          "update": "datum.Country"
        },
        {
          "events": "symbol:mouseout",
          "update": "null"
        }
      ]
    }
  ],

  "projections": [
    {
      "name": "projection",
      "type": "equalEarth",
      "scale": 180,
      "translate": [450, 280]
    }
  ],

  "data": [
    {
      "name": "oceans",
      "url": "https://raw.githubusercontent.com/amadeatheola/FIT3179/main/data_visualization2/js/oceans.topojson",
      "format": {"type": "topojson", "feature": "oceans"}
    },
    {
      "name": "graticules",
      "url": "https://raw.githubusercontent.com/amadeatheola/FIT3179/main/data_visualization2/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
    },
    {
      "name": "countries",
      "url": "https://raw.githubusercontent.com/amadeatheola/FIT3179/main/data_visualization2/js/ne_110m_admin_0_countries.topojson",
      "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
    },
    {
      "name": "area",
      "url": "https://raw.githubusercontent.com/amadeatheola/FIT3179/main/data_visualization2/data/countries.csv",
      "format": { "type": "csv", "parse": "auto" },
      "transform": [
        {
          "type": "geopoint",
          "projection": "projection",
          "fields": ["longitude", "latitude"]
        },
        {
          "type": "filter",
          "expr": "datum.x != null && datum.y != null"
        }
      ]
    },
    {
      "name": "export_all",
      "url": "https://raw.githubusercontent.com/amadeatheola/FIT3179/main/data_visualization2/data/export_clean.csv",
      "format": { "type": "csv", "parse": "auto" },
      "transform": [
        {
          "type": "filter",
          "expr": "datum['Year'] == Year"
        },
        {
          "type": "lookup",
          "from": "area",
          "key": "Country",
          "fields": ["Country"],
          "as": ["source"]
        },
        {
          "type": "lookup",
          "from": "area",
          "key": "Country",
          "fields": ["Partner"],
          "as": ["target"]
        },
        {
          "type": "filter",
          "expr": "datum.source && datum.target"
        }
      ]
    },
    {
      "name": "export_filtered",
      "source": "export_all",
      "transform": [
        {
          "type": "filter",
          "expr": "hoverCountry != null && datum.Country == hoverCountry"
        },
        {
          "type": "linkpath",
          "shape": "curve"
        }
      ]
    }
  ],

  "marks": [
    {
      "type": "shape",
      "from": { "data": "oceans" },
      "encode": {
        "enter": {
          "fill": { "value": "#99d1ec" },
          "stroke": { "value": null },
          "strokeWidth": { "value": 0 }
        }
      },
      "transform": [{ "type": "geoshape", "projection": "projection" }]
    },
    {
      "type": "shape",
      "from": { "data": "graticules" },
      "encode": {
        "enter": {
          "fill": { "value": null },
          "stroke": { "value": "#e6e6e6" },
          "strokeWidth": { "value": 0.5 }
        }
      },
      "transform": [{ "type": "geoshape", "projection": "projection" }]
    },
    {
      "type": "shape",
      "from": { "data": "countries" },
      "encode": {
        "enter": {
          "fill": { "value": "#f0f0f0" },
          "stroke": { "value": "#aaa" },
          "strokeWidth": { "value": 0.5 }
        }
      },
      "transform": [{ "type": "geoshape", "projection": "projection" }]
    },
    {
      "type": "path",
      "from": { "data": "export_filtered" },
      "encode": {
        "enter": {
          "path": { "field": "path" },
          "stroke": { "value": "#aa3333" },
          "strokeOpacity": { "value": 0.6 },
          "strokeWidth": { "value": 1.5 }
        },
        "update": {
          "tooltip": {
            "signal": "'From ' + datum.Country + ' to ' + datum.Partner + ': ' + datum.Quantity + ' ' + datum['Quantity Unit']"
          }
        }
      }
    },
    {
      "type": "symbol",
      "from": { "data": "area" },
      "encode": {
        "enter": {
          "x": { "field": "x" },
          "y": { "field": "y" },
          "size": { "value": 60 },
          "fill": {
            "signal": "hoverCountry && datum.Country == hoverCountry ? '#ff7f0e' : '#1f77b4'"
          },
          "fillOpacity": { "value": 0.7 },
          "stroke": { "value": "white" },
          "strokeWidth": { "value": 0.5 }
        }
      }
    }, 
    {
      "type": "text",
      "from": { "data": "export_filtered" },
      "encode": {
        "enter": {
          "x": { "field": "target.x" },
          "y": { "field": "target.y" },
          "dy": { "value": -10 },
          "text": { "field": "Partner" },
          "fontSize": { "value": 9 },
          "fontStyle": { "value": "italic" },
          "fill": { "value": "#aa3333" },
          "align": { "value": "center" }
        }
      }
    }
  ]
}