{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Rice Consumption in the World (2019-2022)",
  "width": "container",
  "height": 500,
  "params": [
    {
      "name": "Year_selection",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 2019,
        "max": 2022,
        "step": 1,
        "name": "Year:  "
      }
    }
  ],
  "projection": {
    "type": "equirectangular"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/amadeatheola/FIT3179/main/data_visualization2/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "transform": [
        {
          "filter": {
            "field": "properties.NAME",
            "oneOf": [
              "Indonesia",
              "Malaysia",
              "Myanmar",
              "Philippines",
              "Laos",
              "Singapore",
              "Timor-Leste",
              "Vietnam",
              "Thailand",
              "Cambodia"
            ]
          }
        }
      ],
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/amadeatheola/FIT3179/main/data_visualization2/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "filter": {
            "field": "properties.NAME",
            "oneOf": [
              "Indonesia",
              "Malaysia",
              "Myanmar",
              "Philippines",
              "Laos",
              "Singapore",
              "Timor-Leste",
              "Vietnam",
              "Thailand",
              "Cambodia"
            ]
          }
        },
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "#ddd", "stroke": "white", "strokeWidth": 0.5},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
              "url": "https://raw.githubusercontent.com/amadeatheola/FIT3179/main/data_visualization2/data/rice-consumption-long.csv"
            },
      "transform": [
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/amadeatheola/FIT3179/main/data_visualization2/js/ne_110m_admin_0_countries.topojson",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {"filter": "datum.Year == Year_selection"},
        {
          "filter": {
            "field": "Country",
            "oneOf": [
              "Brunei", "Cambodia", "Indonesia", "Laos", "Malaysia", "Myanmar", 
              "Philippines", "Singapore", "Thailand", "Vietnam" 
            ]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "#fff"},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "ConsumptionPerCapita",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [5, 10, 20, 50, 100],
          "range": [
            "#dadaeb", "#bcbddc", "#9e9ac8",
    "#807dba", "#6a51a3", "#5a2d91"
          ]
          }
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "ConsumptionPerCapita", "type": "quantitative", "title": "Consumption per capita (kg/year)", "format": ".2f"},
          {"field": "TotalConsumption", "type": "quantitative", "title": "Total Consumption (kg/year)", "format": ","},
          {"field": "Year", "type": "quantitative", "title": "Year"}
        ]
      }
    }
  ]
}