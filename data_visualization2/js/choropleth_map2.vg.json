{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Rice Yield World Map",
    "anchor": "start",
    "fontSize": 30,
    "fontWeight": "bold",
    "offset": 10
  },
  "width": "container",
  "height": 500,
  "params": [
    {
      "name": "Year_selection",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 2019,
        "max": 2022,
        "step": 1,
        "name": "Year:  "
      }
    }
  ],
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/amadeatheola/FIT3179/main/data_visualization2/js/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/amadeatheola/FIT3179/main/data_visualization2/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/amadeatheola/FIT3179/main/data_visualization2/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "#ddd", "stroke": "white", "strokeWidth": 0.5},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
              "url": "https://raw.githubusercontent.com/amadeatheola/FIT3179/main/data_visualization2/data/yield_20152023.csv"
            },
      "transform": [
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/amadeatheola/FIT3179/main/data_visualization2/js/ne_110m_admin_0_countries.topojson",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {"filter": "datum.Year == Year_selection"}
      ],
      "mark": {"type": "geoshape", "stroke": "#fff"},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "Yield",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1, 2, 3, 4, 5, 7, 9],
            "range": [
                "#f7fcf0",  
                "#e0f3db",  
                "#ccebc5",  
                "#a8ddb5",  
                "#7bccc4",  
                "#43a2ca",  
                "#0868ac",  
                "#084081"  
            ]
            },
          "legend": { "title": "Tonnes per ha" }
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "Yield", "type": "quantitative", "title": "Yield (tonnes/ha)", "format": ".2f"},
          {"field": "Year", "type": "quantitative", "title": "Year"}
        ]
      }
    },
    {
      "data": {
        "values": [
          {
            "note": "Production is concentrated in southern New South Wales",
            "longitude": 147,
            "latitude": -34
          }
        ]
      },
      "mark": {
        "type": "text",
        "angle":360,
        "align": "left",
        "baseline": "top",
        "dx": 5,
        "dy": 10,
        "fontSize": 14,
        "fontWeight": "bold",
        "color": "purple"
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "note"}
      }
    }
  ]
}