{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Rice Yield ASEAN Map",
    "anchor": "start",
    "fontSize": 30,
    "fontWeight": "bold",
    "offset": 10
  },
  "width": "container",
  "height": 500,
  "params": [
    {
      "name": "Year_selection",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 2019,
        "max": 2022,
        "step": 1,
        "name": "Year:  "
      }
    }
  ],
  "projection": {
    "type": "equirectangular"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/amadeatheola/FIT3179/main/data_visualization2/js/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "transform": [
        {
          "filter": {
            "field": "properties.NAME",
            "oneOf": [
              "Indonesia",
              "Malaysia",
              "Myanmar",
              "Philippines",
              "Laos",
              "Singapore",
              "Timor-Leste",
              "Vietnam",
              "Thailand",
              "Cambodia"
            ]
          }
        }
      ],
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/amadeatheola/FIT3179/main/data_visualization2/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "filter": {
            "field": "properties.NAME",
            "oneOf": [
              "Indonesia",
              "Malaysia",
              "Myanmar",
              "Philippines",
              "Laos",
              "Singapore",
              "Timor-Leste",
              "Vietnam",
              "Thailand",
              "Cambodia"
            ]
          }
        },
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "#ddd", "stroke": "white", "strokeWidth": 0.5},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
              "url": "https://raw.githubusercontent.com/amadeatheola/FIT3179/main/data_visualization2/data/yield_20152023.csv"
            },
      "transform": [
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/amadeatheola/FIT3179/main/data_visualization2/js/ne_110m_admin_0_countries.topojson",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {"filter": "datum.Year == Year_selection"},
        {
          "filter": {
            "field": "Country",
            "oneOf": [
              "Brunei", "Cambodia", "Indonesia", "Laos", "Malaysia", "Myanmar", 
              "Philippines", "Singapore", "Thailand", "Vietnam" 
            ]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "#fff"},
      "encoding": {
        "shape": {"field": "geo", "type": "geojson"},
        "color": {
          "field": "Yield",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1, 2, 3, 4, 5, 7, 9],
            "range": [
                "#f7fcf0",  
                "#e0f3db",  
                "#ccebc5",  
                "#a8ddb5",  
                "#7bccc4",  
                "#43a2ca",  
                "#0868ac",  
                "#084081"  
            ]
            },
          "legend": { "title": "Tonnes per ha" }
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "Yield", "type": "quantitative", "title": "Yield (tonnes/ha)", "format": ".2f"},
          {"field": "Year", "type": "quantitative", "title": "Year"}
        ]
      }
    }
  ]
}